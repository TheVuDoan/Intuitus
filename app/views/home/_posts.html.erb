<% posts.each do |post| %>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-2 bg-gray-50 border-b border-gray-200">
      <span class="text-sm text-gray-600">Source: <%= post[:source] %></span>
    </div>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-gray-800"><%= post[:title] %></div>
      <p class="text-gray-600 text-base line-clamp-3">
        <%= post[:description] %>
      </p>
    </div>
    <div class="px-6 py-4 flex justify-between items-center">
      <span class="text-sm text-gray-500">Published: <%= post[:publish_date] %></span>

      <a href="<%= post[:link] %>" class="text-blue-500 hover:text-blue-700 font-semibold" target="_blank">
        Read more
      </a>
    </div>
  </div>
<% end %>
